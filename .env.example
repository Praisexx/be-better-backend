FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/metaads_analyzer

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Web Search APIs (Optional - for enhanced business discovery)
# Get Tavily API key: https://tavily.com (Recommended, 1000 free searches/month)
TAVILY_API_KEY=your-tavily-api-key-here
# Get SerpAPI key: https://serpapi.com (Alternative, 100 free searches/month)
SERPAPI_KEY=your-serpapi-key-here

# OAuth Social Media Platforms
# Meta (Facebook & Instagram)
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# Twitter/X
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# WhatsApp Business
WHATSAPP_APP_ID=your-whatsapp-app-id
WHATSAPP_APP_SECRET=your-whatsapp-app-secret

# Pinterest
PINTEREST_APP_ID=your-pinterest-app-id
PINTEREST_APP_SECRET=your-pinterest-app-secret

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Email (Resend)
RESEND_API_KEY=your-resend-api-key-here
FROM_EMAIL=noreply@yourdomain.com

# Redis (for queue)
REDIS_URL=redis://localhost:6379/0

# Upload settings
MAX_FILE_SIZE=209715200
UPLOAD_FOLDER=uploads

# Frontend URL
FRONTEND_URL=http://localhost:3000
